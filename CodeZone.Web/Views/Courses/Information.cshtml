@model CodeZone.DataAccess.Models.Course

@{
    ViewData["Title"] = "Course Information";
}

<div class="container mt-4">
    <h2 class="text-primary"><i class="fa-solid fa-book-open"></i> Course Information</h2>
    <div class="card shadow-sm p-4 border-primary">
        <h3 class="text-center text-primary">@Model.Title</h3>
        <p class="text-muted text-center">@Model.Description</p>

        <h4 class="mt-4"><i class="fa-solid fa-users"></i> Enrolled Students</h4>
        @if (Model.Enrollments != null && Model.Enrollments.Any())
        {
            <div class="table-responsive">
                <table class="table table-hover table-striped align-middle shadow-sm">
                    <thead class="table-dark">
                        <tr>
                            <th><i class="fa-solid fa-user"></i> Full Name</th>
                            <th>Email</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var enrollment in Model.Enrollments)
                        {
                            <tr>
                                <td class="fw-bold">@enrollment.Student.FullName</td>
                                <td class="text-muted">@enrollment.Student.Email</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
        else
        {
            <p class="text-muted">No students enrolled in this course.</p>
        }

        <div class="text-center mt-4">
            <a asp-action="Index" class="btn btn-secondary">
                <i class="fa-solid fa-arrow-left"></i> Back to Courses
            </a>
        </div>
    </div>
</div>
